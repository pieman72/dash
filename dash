	declare -A WEATHER_DECORATIONS
	if [ "$DISPLAY_ENCODING" == 'UTF8' ]; then
		WEATHER_DECORATIONS["Fair"]="-$DISPLAY_ESCAPE_SPACE"
		WEATHER_DECORATIONS["A Few Clouds"]="~‚òÅ$DISPLAY_ESCAPE_SPACE\
$DISPLAY_ESCAPE_SPACE$DISPLAY_ESCAPE_SPACE"
		WEATHER_DECORATIONS["A Few Clouds with Haze"]="~‚òÅ‚ñë~\
$DISPLAY_ESCAPE_SPACE$DISPLAY_ESCAPE_SPACE"
		WEATHER_DECORATIONS["Partly Cloudy"]="‚òÅ~$DISPLAY_ESCAPE_SPACE\
$DISPLAY_ESCAPE_SPACE"
		WEATHER_DECORATIONS["Mostly Cloudy"]="‚òÅ~$DISPLAY_ESCAPE_SPACE"
