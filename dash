#!/bin/bash

# Initialization
STARTED=0
TRAPS_SET=0
[ -z "$DASH_ROOT" ] && DASH_ROOT="$( cd "$( dirname "$0" )" && pwd )"
[ -z "$DASH_INI_PATH" ] && DASH_INI_PATH="$HOME/.dash.ini"
if [ -f "$DASH_INI_PATH" ]; then
	function load_config(){
		RET="$(awk -F "\\\\s*=\\\\s*" "/^$1=/"' {print $2}'\
			"$DASH_INI_PATH")"
		[ -n "$RET" ] && echo $RET || echo $2
	}
else
	function load_config(){ echo $2; }
fi

